<h1>Listing of Application Settings</h1>

<article>
  <% @application_settings.each do |application_setting| %>
    <div class="card" style="width: 18rem;">
      <div class="card-body d-flex flex-column">
        <h5 class="card-title">
          <%= application_setting.contest_year %>
        </h5>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            Application will open on:
            <div class="font-weight-bold">
              <%= application_setting.opendate %>
            </div>
          </li>
          <li class="list-group-item">
            Maximum number of applications with deposits before application switches:
            <div class="font-weight-bold">
              <%= application_setting.application_buffer %>
            </div>
          </li>
        </ul>
        <div class="align-self-center mt-2" aria-label="Manage Application Setting" role="group">
          <%= link_to 'Edit', edit_application_setting_path(application_setting), class: 'btn btn-sm btn-warning' %>
          <%= link_to 'Delete', application_setting, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-link' %>
        </div>
      </div>
    </div>
  <% end %>
</article>

<hr class="col-4">
<%= link_to 'Setup a New Application', new_application_setting_path, class: 'btn btn-sm btn-light' %>
