<%= form_for @application_setting do |f| %>
  <% if @application_setting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@application_setting.errors.count, "error") %> prohibited this application_setting from being saved:</h2>
      <ul>
        <% @application_setting.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="fieldset">
    <div class="form-group">
      <%= f.label :opendate, "Date and Time contest should open (in #{Time.zone.name})", class: 'required' %><br>
      <%= f.datetime_select :opendate %>
    </div>
    <div class="form-group">
      <%= f.label :application_buffer, "Stop allowing public application submissions after", class: 'required' %>
      <%= f.number_field :application_buffer, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :contest_year, class: 'required' %>
      <%= f.number_field :contest_year, placeholder: "YYYY", class: 'form-control' %>
    </div>
    <div class="actions">
      <%= f.submit 'Save' %>
    </div>
  </div>
<% end %>
