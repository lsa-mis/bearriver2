<%= form_for @gender, data: { turbo_frame: dom_id(@gender) } do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div class="actions">
    <%= f.submit 'Save' %>
  </div>
<% end %>
